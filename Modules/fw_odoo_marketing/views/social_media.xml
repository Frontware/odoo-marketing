<odoo>
  <data>
    
    <record id="view_marketing_social_media_graph" model="ir.ui.view">
      <field name="name">marketing_type graph</field>
      <field name="model">social_media</field>
      <field name="arch" type="xml">
        <graph>
          <field name="state" type="row"/>
          <field name="mailing_type" type="row"/>
        </graph>
      </field>
    </record>

    <record id="view_marketing_social_media_form" model="ir.ui.view">
      <field name="name">marketing_type form</field>
      <field name="model">social_media</field>
      <field name="arch" type="xml">
        <form>
          <field name="twitter"/>
          <field name="facebook"/>
          <field name="mailing"/>
          <field name="name"/>
          <field name="state"/>
          <field name="mailing_type"/>
        </form>
      </field>
    </record>




    
  <record id="mailing_mailing_action_social_media" model="ir.actions.act_window">
        <field name="name">Statistic Social media</field>
        <field name="res_model">social_media</field>
        <field name="view_mode">kanban,tree,form,graph</field>
        <field name="domain">[]</field>
    </record>

    <record id="mailing_mailing_action_social_media_done" model="ir.actions.act_window">
        <field name="name">Statistic Social media</field>
        <field name="res_model">social_media</field>
        <field name="view_mode">graph</field>
        <field name="domain">[('state', '=', 'done')]</field>
    </record>

        <!-- telegram Marketing / telegram Marketing -->


    <menuitem id="mass_mailing_marketing_menu_socila_media"
        name="Social Media"
        parent="mass_mailing_marketing_menu_root"
        action="mailing_mailing_action_social_media"/>
  
    <menuitem id="mass_mailing_marketing_menu_socila_media_done"
        name="Social Media done"
        parent="mass_mailing_marketing_menu_root"
        action="mailing_mailing_action_social_media_done"/>
  
  </data>
</odoo>