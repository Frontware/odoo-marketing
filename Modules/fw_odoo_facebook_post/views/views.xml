<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="fw_odoo_facebook_post.list">
      <field name="name">fw_odoo_facebook_post list</field>
      <field name="model">fw_odoo_facebook_post</field>
      <field name="arch" type="xml">
        <form string="list">
          <header>
            <button name="send_post" id="send_facebook_post" type="object" string="send post facebook" class="btn-primary"/>
          </header>
          <sheet>
            <group>
              <field name="msg" string="message"/>
              <field name="facebook_access_token" string="Facebook access token"/>
            </group>
            <group>
              <field name="fb_page_id">
                <tree>
                  <field name="page_id" string="Facebook Id Page"/>
                </tree>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="fw_odoo_facebook_post.action_window">
      <field name="name">fw_odoo_facebook_post window</field>
      <field name="res_model">fw_odoo_facebook_post</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>


