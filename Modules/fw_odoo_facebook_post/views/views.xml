<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="fw_odoo_facebook_post.tree">
      <field name="name">fw_odoo_facebook_post tree</field>
      <field name="model">fw_odoo_facebook_post</field>
      <field name="arch" type="xml">
        <tree string="FB Post">
          <field name="ref"/>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="fw_odoo_facebook_post.form">
      <field name="name">fw_odoo_facebook_post form</field>
      <field name="model">fw_odoo_facebook_post</field>
      <field name="arch" type="xml">
        <form string="FB Post">
          <header>
            <button name="send_post" id="send_facebook_post" type="object" string="post on facebook" class="btn-primary" attrs="{'invisible': [('state', 'in', ('B-schedule','C-done','cancel'))]}" confirm="Do you still want to post ?"/>
            <button name="action_schedule" type="object" class="btn-secondary" string="Schedule" attrs="{'invisible': [('state', 'in', ('C-done', 'D-cancel'))]}"/>
            <button name="action_cancel" type="object" class="btn-secondary" string="Cancel" attrs="{'invisible': [('state', 'in', ('A-draft','D-cancel'))]}"/>
            <button name="action_retry" type="object" class="btn-secondary" string="Retry" attrs="{'invisible': [('state', 'in', ('A-draft', 'B-schedule'))]}"/>
            <field name="state" widget="statusbar" statusbar_visible="A-draft,C-done"/>
          </header>
          <div class="alert alert-info text-center" role="alert">
            <div attrs="{'invisible': [('state', '!=', 'B-schedule')]}">
              <strong>
                <span name="next_departure_text">This Post is scheduled for </span>
                <field name="schedule_date" class="oe_inline" readonly="1"/>
.
              </strong>
            </div>
            <div attrs="{'invisible': [('state', '!=', 'C-done')]}">
              <strong>
                <span name="next_departure_text">This is posted the </span>
                <field name="schedule_date" class="oe_inline" readonly="1"/>
.
              </strong>
            </div>
          </div>
          <sheet>
            <group>
              <field name="ref"/>
              <field name="name" string="Name : "/>
            </group>
            <group>
              <field name="msg" string="message : "/>
              <field name="image" string="URL image : "/>
            </group>
            <group>
              <field name="fb_page_id">
                <tree>
                  <field name="page_name" string = "Facebook name Page : "/>
                  <field name="page_id" string="Facebook Id Page : "/>
                  <field name="facebook_access_token" string="Facebook access token : " invisible="1"/>
                </tree>
              </field>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </div>
        </form>
      </field>
    </record>

    <record id="view_fw_odoo_facebook_post_kanban" model="ir.ui.view">
      <field name="name">fw_odoo_facebook_post kanban</field>
      <field name="model">fw_odoo_facebook_post</field>
      <field name="arch" type="xml">
        <kanban default_group_by="state" quick_create="false" sample="1">
          <field name="state" readonly="1"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click oe_kanban_fw_odoo_facebook_post">
                <div class="oe_kanban_content">
                  <strong>
                    <field name="name" string="Name : "/>
                    <BR />
                  </strong>
                  <field name="ref"/>
                  <BR />
                  <div attrs="{'invisible': [('state', '!=', 'B-schedule')]}">
                    <span >Schedule for :</span>
                    <field name="schedule_date"/>
                  </div>
                  <div attrs="{'invisible': [('state', '!=', 'C-done')]}">
                    <span >Posted the :</span>
                    <field name="schedule_date"/>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record id="view_fw_odoo_facebook_post_graph" model="ir.ui.view">
      <field name="name">fw_odoo_facebook_post graph</field>
      <field name="model">fw_odoo_facebook_post</field>
      <field name="arch" type="xml">
        <graph>
          <field name="state"/>
        </graph>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="fw_odoo_facebook_post.action_window">
      <field name="name">fw_odoo_facebook_post window</field>
      <field name="res_model">fw_odoo_facebook_post</field>
      <field name="view_mode">kanban,tree,form,graph</field>
    </record>

  </data>
</odoo>