<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="fw_odoo_facebook_post.tree">
      <field name="name">fw_odoo_facebook_post tree</field>
      <field name="model">fw_odoo_facebook_post</field>
      <field name="arch" type="xml">
        <tree string="FB Post">
            <field name="name"/>
            <field name="msg" string="message : "/>
            <field name="image" string="URL image : "/>
            <field name="fb_page_id">
              <tree>
                <field name="page_id" string="Facebook Id Page : "/>
                <field name="facebook_access_token" string="Facebook access token : " invisible="1"/>
              </tree>
            </field>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="fw_odoo_facebook_post.form">
      <field name="name">fw_odoo_facebook_post form</field>
      <field name="model">fw_odoo_facebook_post</field>
      <field name="arch" type="xml">
        <form string="FB Post">
          <header>
            <button name="send_post" id="send_facebook_post" type="object" string="post on facebook" class="btn-primary"
            attrs="{'invisible': [('state', 'in', ('schedule','done','cancel'))]}"
            confirm="Do you still want to post ?"/>
            <button name="action_schedule" type="object" class="btn-secondary" string="Schedule"
            attrs="{'invisible': [('state', 'in', ('done', 'cancel'))]}"/>
            <button name="action_cancel" type="object" class="btn-secondary" string="Cancel"
            attrs="{'invisible': [('state', 'in', ('draft','cancel'))]}"/>
            <button name="action_retry" type="object" class="btn-secondary" string="Retry"
            attrs="{'invisible': [('state', 'in', ('draft', 'schedule'))]}"/>
            <field name="state" widget="statusbar"  statusbar_visible="draft,done"/>
          </header>
          <div class="alert alert-info text-center" role="alert" >
            <div attrs="{'invisible': [('state', '!=', 'schedule')]}">
              <strong>
                <span name="next_departure_text">This Tweet is scheduled for </span>
                <field name="schedule_date" class="oe_inline"/>.
              </strong>
            </div>
          </div>
          <sheet>
            <field name="name"/>
            <group>
              <field name="msg" string="message : "/>
              <field name="image" string="URL image : "/>
            </group>
            <group>
              <field name="fb_page_id">
                <tree>
                  <field name="page_name" string = "Facebook name Page : "/>
                  <field name="page_id" string="Facebook Id Page : "/>
                  <field name="facebook_access_token" string="Facebook access token : " invisible="1"/>
                </tree>
              </field>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </div>
        </form>
      </field>
    </record>


    
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="fw_odoo_facebook_post.action_window">
      <field name="name">fw_odoo_facebook_post window</field>
      <field name="res_model">fw_odoo_facebook_post</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    



    <!-- Top menu item -->

    <menuitem name="fw_odoo_facebook_post" id="fw_odoo_facebook_post.menu_root" web_icon="fw_odoo_facebook_post,static/description/icon.png"/>

    <!-- menu categories -->

    <menuitem name="Facebook Post" id="fw_odoo_facebook_post.menu_1" parent="fw_odoo_facebook_post.menu_root" action="fw_odoo_facebook_post.action_window"/>



  </data>
</odoo>