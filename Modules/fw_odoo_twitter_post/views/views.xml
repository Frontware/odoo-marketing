<odoo>
  <data>
        <!-- explicit list view definition -->
    <record model="ir.ui.view" id="fw_odoo_twitter_post.tree">
      <field name="name">fw_odoo_twitter_post tree</field>
      <field name="model">fw_odoo_twitter_post</field>
      <field name="arch" type="xml">
        <tree string="TT Post">
            <field name="reference"/>
            <field name="name" string="Name : "/>
            <field name="msg" string="message : "/>
            <field name="image" string="URL image : "/>
            <field name="CK" string="twitter API KEY  : "/>
            <field name="CS" string="twitter API KEY SECRET : "/>
            <field name="AT" string="twitter ACCESS TOKEN : " />
            <field name="AS" string="twitter ACCESS TOKEN SECRET : "/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="fw_odoo_twitter_post.form">
      <field name="name">fw_odoo_twitter_post form</field>
      <field name="model">fw_odoo_twitter_post</field>
      <field name="arch" type="xml">
        <form string="TT Post">
          <header>
            <button name="send_post" id="send_twitter_post" type="object" string="post on twitter" class="btn-primary"
            attrs="{'invisible': [('state', 'in', ('C-done', 'B-schedule', 'D-cancel'))]}"
            confirm="Do you still want to tweet ?"/>
            <button name="action_schedule" type="object" class="btn-secondary" string="Schedule"
            attrs="{'invisible': [('state', 'in', ('C-done', 'D-cancel'))]}"/>
            <button name="action_cancel" type="object" class="btn-secondary" string="Cancel"
            attrs="{'invisible': [('state', 'in', ('A-draft', 'D-cancel'))]}"/>
            <button name="action_retry" type="object" class="btn-secondary" string="Retry"
            attrs="{'invisible': [('state', 'in', ('A-draft', 'B-schedule'))]}"/>
            <field name="state" widget="statusbar"  statusbar_visible="A-draft,C-done"/>
          </header>
          <div class="alert alert-info text-center" role="alert" >
            <div attrs="{'invisible': [('state', '!=', 'B-schedule')]}">
              <strong>
                <span name="next_departure_text">This Tweet is scheduled for </span>
                <field name="schedule_date" class="oe_inline"/>.
              </strong>
            </div>
          </div>
          <sheet>
            <group>
              <field name="reference" string="ID : "/>
              <field name="name" string="Name : "/>
            </group>
            <group>
              <field name="msg" string="message : "/>
              <field name="image" string="URL image : "/>
            </group>
            <group>
              <field name="CK" string="twitter API KEY  : "/>
              <field name="CS" string="twitter API KEY SECRET : "/>
              <field name="AT" string="twitter ACCESS TOKEN : " />
              <field name="AS" string="twitter ACCESS TOKEN SECRET : "/>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </div>
        </form>
      </field>
    </record>


    <record id="view_fw_odoo_twitter_post_kanban" model="ir.ui.view">
      <field name="name">fw_odoo_twitter_post kanban</field>
      <field name="model">fw_odoo_twitter_post</field>
      <field name="arch" type="xml">
        <kanban default_group_by="state" quick_create="false" sample="1">
        <field name="state"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click">
                <li><field name="reference"/></li>
                <li><field name="name" string="Name : "/></li>
                <li><field name="schedule_date" /></li>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="fw_odoo_twitter_post.action_window">
      <field name="name">fw_odoo_twitter_post window</field>
      <field name="res_model">fw_odoo_twitter_post</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>




    <!-- Top menu item -->

    <menuitem name="fw_odoo_twitter_post" id="fw_odoo_twitter_post.menu_root" web_icon="fw_odoo_twitter_post,static/description/icon.png"/>

    <!-- menu categories -->

    <menuitem name="Tweet" id="fw_odoo_twitter_post.menu_1" parent="fw_odoo_twitter_post.menu_root" action="fw_odoo_twitter_post.action_window"/>

    
  </data>
</odoo>