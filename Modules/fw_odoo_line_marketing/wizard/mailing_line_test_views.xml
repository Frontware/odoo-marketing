<?xml version="1.0"?>
<odoo>
    <record id="mailing_line_test_view_form" model="ir.ui.view">
        <field name="name">mailing.line.test.view.form</field>
        <field name="model">mailing.line.test</field>
        <field name="arch" type="xml">
            <form string="Send a Sample SMS">
                <p class="text-muted">
                    Send a sample Message for testing purpose to the group below.
                </p>
                <group>
                    <field name="group_ids" />
                </group>
                <footer>
                    <button string="Send" name="action_send_line" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="mailing_line_test_action" model="ir.actions.act_window">
        <field name="name">Test LINE Marketing</field>
        <field name="res_model">mailing.line.test</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
