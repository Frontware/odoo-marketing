<?xml version="1.0" encoding="utf-8"?>
<odoo><data>

    <record model="ir.ui.view" id="mailing_mailing_view_search_whatsapp">
        <field name="name">mailing_mailing_view_search_whatsapp</field>
        <field name="model">mailing.mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_search"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='assigned_to_me']" position="attributes">
                <attribute name="string">My whatsapp Marketing</attribute>
            </xpath>
        </field>
    </record>

    <record id="mailing_mailing_view_form_whatsapp" model="ir.ui.view">
        <field name="name">mailing.mailing.view.form.inherit.whatsapp</field>
        <field name="model">mailing.mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_form"/>
        <field name="arch" type="xml">  
            <header>
            <!--<button id="button_send_message_whatsapp" name="%(fw_odoo_whatsapp_marketing.mailing_whatsapp_message_action)d" type="action" string="send whatsapp multiple message" class="oe_highlight"/>
            <button id="button_send_message_whatsapp1" name="send_message" type="object" string="send whatsapp  message" class="oe_highlight"/>
            -->
            </header>        
            <xpath expr="//field[@name='subject']" position="after">
                <field name="subject" string="Title" attrs="{'invisible': [('mailing_type', '!=', 'whatsapp')], 'readonly': [('state', 'in', ('sending', 'done'))], 'required': [('mailing_type', '=', 'whatsapp')]}"/>
            </xpath>             
            <xpath expr="//page[@name='dynamic_placeholder_generator']" position="before">
            <page string="whatsapp settings" attrs="{'invisible': [('mailing_type', '!=', 'whatsapp')]}">
                <group>
                    <field name="mobile_group">
                        <tree>
                            <field name="mobile" string="Mobile number"/>
                        </tree>
                    </field>
                    <field name="message" string="Message"/>
                </group>
            </page>
            </xpath>
            <xpath expr="//button[@name='action_put_in_queue']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('state', 'in', ('in_queue', 'done')), ('mailing_type', '!=', 'mail')]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_put_in_queue']" position="after">
                <button name="action_put_in_queue_whatsapp" type="object"
                    class="oe_highlight" string="Put in Queue"
                    attrs="{'invisible': ['|', ('mailing_type', '!=', 'whatsapp'), ('state', 'in', ('in_queue', 'done'))]}"
                    confirm="This will schedule an whatsapp marketing to all group. Do you still want to proceed ?"/>
                <button name="action_send_now_whatsapp" type="object"
                    class="oe_highlight" string="Send Now"
                    attrs="{'invisible': ['|', ('mailing_type', '!=', 'whatsapp'), ('state', 'in', ('done'))]}"
                    confirm="This will send whatsapp to all group now. Do you still want to proceed ?"/>
            </xpath>
        </field>
    </record>

    <record id="mailing_mailing_view_form_mixed_whatsapp" model="ir.ui.view">
        <!-- View allowign to display the mailing type and therefore choosing
        the way of mailing: not prioritized one, used in some specific cases
        like "contacting people" without predefining mail or whatsapp or whatsapp -->
        <field name="name">mailing.mailing.view.form.mixed.whatsapp</field>
        <field name="model">mailing.mailing</field>
        <field name="mode">primary</field>
        <field name="priority">30</field>
        <field name="inherit_id" ref="fw_odoo_whatsapp_marketing.mailing_mailing_view_form_whatsapp"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mailing_type']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>

    <record id="mailing_mailing_view_kanban_whatsapp" model="ir.ui.view">
        <field name="name">mailing.mailing.view.kanban.inherit.whatsapp</field>
        <field name="model">mailing.mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='stat_opened']" position="attributes">
                <attribute name="attrs">{'invisible': [('mailing_type', '!=', 'whatsapp')]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="mailing_mailing_view_tree_whatsapp" model="ir.ui.view">
        <field name="name">mailing.mailing.view.tree.whatsapp</field>
        <field name="model">mailing.mailing</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="whatsapp Marketing" sample="1">
                <field name="mailing_type" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="mailing_mailing_action_whatsapp" model="ir.actions.act_window">
        <field name="name">whatsapp Marketing</field>
        <field name="res_model">mailing.mailing</field>
        <field name="view_mode">kanban,tree,form,graph</field>
        <field name="search_view_id" ref="mailing_mailing_view_search_whatsapp"/>
        <field name="domain">[('mailing_type', '=', 'whatsapp')]</field>
        <field name="context">{
                'search_default_assigned_to_me': 1,
                'default_user_id': uid,
                'default_mailing_type': 'whatsapp',
                'mailing_whatsapp': True
        }</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new whatsapp Marketing
          </p><p>
            You can easily send whatsapp to any contact saved in other Odoo apps.
          </p>
        </field>
    </record>
    
    <record id="mailing_mailing_action_whatsapp_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence">1</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="mailing_mailing_view_kanban_whatsapp"/>
        <field name="act_window_id" ref="mailing_mailing_action_whatsapp"/>
    </record>
    <record id="mailing_mailing_action_whatsapp_view_tree" model="ir.actions.act_window.view">
        <field name="sequence">2</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="mailing_mailing_view_tree_whatsapp"/>
        <field name="act_window_id" ref="mailing_mailing_action_whatsapp"/>
    </record>

    <!-- whatsapp Marketing / whatsapp Marketing -->
    <record id="mass_mailing_whatsapp_menu_mass_whatsapp" model="ir.ui.menu">
        <field name="action" ref="mailing_mailing_action_whatsapp"/>
    </record>
    
    
</data

></odoo>
